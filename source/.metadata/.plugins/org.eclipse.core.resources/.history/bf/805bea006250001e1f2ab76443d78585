package tut01;

public class ArithEx {

	public static void main(String[] args) {
		// /몫, % 나머지(나누어지지 않으면 값이 나머지)
		//임의 정수 2개를 선언, 초기화 한 후 산술연산을 수행하시오.
		//4,5 초기값으로 설정하시오.
		int num1=4;
		int num2=5;
		
		System.out.println("합계는 "+(num1+num2)+"입니다.");
		System.out.println(num1 %num2);                    
	}

}
